[alias]
  l = log --oneline -10 --
  fl = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -- # full log
  co = checkout
  sw = switch
  a = add
  st = stash -u
  stp = stash pop 
  stl = stash list
  c = commit -S -m
	ca = commit -S --amend
	can = commit -S --amend --no-edit
  pl = pull --prune --progress --autostash --rebase
  cl = clone
  cl1 = clone --depth=1
  p = push
  pa = push --all
  pp = push --prune
  pt = push --follow-tags
	pa = pull --all
  s = status -s
  f = fetch
  fa = fetch --all
  r = rebase
  rc = rebase --continue
  ra = rebase --abort
  m = merge
  b = branch
	ba = branch -avv
  bd = push origin --delete
  chp = cherry-pick
  rs = reset
  rshead = reset HEAD --
	rsh = reset --hard
  d = diff --color --color-words --abbrev
  feat = !"git fetch origin; git switch -c feat/$1 origin/${2-next} #"
  bugfix = !"git fetch origin; git switch -c bugfix/$1 origin/${2-next} #"
  cb = !"git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D $branch; done" # clean branch
  rn = "!f() { \
        local current_branch="$(git rev-parse --abbrev-ref HEAD)"; \
        git pl origin $current_brnach; \
        git rebase origin/${1-next}; \
        git p -uf; \
    }; f"
  # Show the diff between the latest commit and the current state
  df = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  t = tag -ln3
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[help]
	autocorrect = 0

[push]
	default = current

[pull]
  rebase = false

# so much color
[color]
  ui = always
  
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "branch"]
current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

